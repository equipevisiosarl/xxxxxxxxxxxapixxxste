# Augmenter la taille maximale des fichiers téléversés
php_value upload_max_filesize 12M

# Augmenter la taille maximale des données POST (doit être supérieur ou égal à upload_max_filesize)
php_value post_max_size 12M

# Augmenter le temps d'exécution maximum pour permettre des téléversements plus longs (facultatif)
php_value max_execution_time 300

# Augmenter la limite de temps pour le parsing des données POST (facultatif)
php_value max_input_time 300

# Limiter la mémoire que PHP peut utiliser (doit être suffisamment élevée pour gérer de gros fichiers)
php_value memory_limit 128M
